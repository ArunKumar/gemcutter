<% @title = "stats" %>
<% @subtitle = "since 2009" %>

<div class="statistics clearfix">
  <div class="border">
    <span><%= number_with_delimiter @number_of_gems %></span> gems
    <%= statistic_sparkline @recent_gems_created %>
  </div>

  <div class="border">
    <span><%= number_with_delimiter @number_of_downloads %></span> downloads
    <%= statistic_sparkline @recent_downloads_created %>
  </div>

  <div class="border">
    <span><%= number_with_delimiter @number_of_users %></span> users
    <%= statistic_sparkline @recent_users_created %>
  </div>

  <div class="border chart">
    <%= most_downloaded_chart(@most_downloaded) %>
  </div>
</div>
